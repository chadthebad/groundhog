<h1>Albums</h1>

<table>
  <tr>
    <th>List of Albums<th>
    <th>Actions</th>
  </tr>
  
  <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album.title, album %> (<%= pluralize(album.photos.count, 'photo')%>)</td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Delete', album, confirm: 'Really?', method: :delete %></td>
      </tr>
    <% end %>
</table>

</br>

<%= link_to 'Add Album', new_album_path %>